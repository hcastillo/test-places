<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
             <gradient
			 	android:angle="90"
				android:centerX="55%"
				android:centerColor="#C45D18"
				android:startColor="#C45D18"
				android:endColor="#B5B5B5"
				android:type="linear"/>
            <stroke 
                android:width="1dp" 
                android:color="#B5B5B5" />
            <corners 
                android:radius="5dp" />
        </shape>      
    </item>
       
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient  
				android:angle="90"
				android:centerX="55%"
				android:centerColor="#C45D18"
				android:startColor="#C45D18"
				android:endColor="#B5B5B5"
				android:type="linear"/>
            <stroke 
                android:width="1dp" 
                android:color="#B5B5B5" />
            <corners 
                android:radius="5dp" /> 
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
           <gradient
				android:angle="270"
				android:centerX="55%"                 
                android:centerColor="#000000"
				android:startColor="#B5B5B5"
				android:endColor="#000000"
				android:type="linear"/>
            <stroke 
                android:width="1dp" 
                android:color="#B5B5B5" />
            <corners 
                android:radius="5dp" />
        </shape>
  	</item>	
</selector>